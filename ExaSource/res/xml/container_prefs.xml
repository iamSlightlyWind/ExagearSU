<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="Rename" android:key="NAME" android:defaultValue="[No name]" android:dialogTitle="Name" />
    <ListPreference android:entries="@array/cont_pref_renderer_entries" android:title="GPU" android:key="RENDERER" android:summary="%s" android:defaultValue="llvmpipe" android:dialogTitle="Choice GPU" android:entryValues="@array/cont_pref_renderer_values" />
    <ListPreference android:entries="@array/cont_pref_screen_size_entries" android:title="Screen size" android:key="SCREEN_SIZE" android:summary="%s" android:defaultValue="default" android:dialogTitle="Screen size" android:entryValues="@array/cont_pref_screen_size_values" />
    <ListPreference android:entries="@array/cont_pref_screen_color_depth_entries" android:title="Graphics" android:key="SCREEN_COLOR_DEPTH" android:summary="%s" android:defaultValue="32" android:dialogTitle="Color depth" android:entryValues="@array/cont_pref_screen_color_depth_values" />
    <ListPreference android:entries="@array/cont_pref_controls_entries" android:title="Controls" android:key="CONTROLS" android:summary="%s" android:defaultValue="default" android:dialogTitle="Controls" android:entryValues="@array/cont_pref_controls_values" />
    <ListPreference android:entries="@array/cont_pref_locale_entries" android:title="Language" android:key="LOCALE_NAME" android:summary="%s" android:defaultValue="en_US.utf8" android:dialogTitle="Locale name" android:entryValues="@array/cont_pref_locale_values" />
    <CheckBoxPreference android:title="Hide taskbar when launching from shortcut" android:key="HIDE_TASKBAR_SHORTCUT" android:defaultValue="true" />
    <CheckBoxPreference android:title="Default control on running not from shortcut" android:key="DEFAULT_CONTROLS_NOT_SHORTCUT" android:defaultValue="false" />
    <CheckBoxPreference android:title="Default screen resolution on running not from shortcut" android:key="DEFAULT_RESOLUTION_NOT_SHORTCUT" android:defaultValue="false" />
</PreferenceScreen>